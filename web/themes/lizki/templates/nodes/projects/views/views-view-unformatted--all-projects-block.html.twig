{% for row in rows %}
  {% set title =  view.style_plugin.getField(loop.index0, 'title') %}
  {% set image = view.style_plugin.getField(loop.index0, 'field_image') %}
  {% set url = view.style_plugin.getField(loop.index0, 'view_node') %}
  {% set summary    = view.style_plugin.getField(loop.index0, 'body') %}

  <div class="col-xl-5">
    <a href="{{url}}" class="mil-project-card mil-mb-50">
        <div class="mil-cover-frame mil-up">
            <div class="mil-hover-frame">
                <img loading="lazy" src="{{image}}" alt="{{title}}" data-value-1="1" data-value-2="1.1" class="mil-scale-img">
            </div>
        </div>
        <div class="mil-descr mil-pad-0 mil-up">
            <h4 class="mil-mb-10">{{title}}</h4>
            <p>{{ summary }}</p>
        </div>
    </a>
  </div>
{% endfor %}